<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingTop="10dp"
            android:shadowColor="@color/gray"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="@integer/material_motion_duration_short_1"
            android:text="SPEED SHEET"
            android:textColor="@color/white"
            android:textSize="70dp" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available methods of OCR:"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginStart="10dp"/>


    <RadioGroup
        android:id="@+id/radioGroupEndpoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:divider="@android:drawable/divider_horizontal_dark"
        android:dividerPadding="50dp"
        android:orientation="vertical"
        android:paddingStart="15dp" /> <!-- Make sure this color is defined in your colors.xml -->

    <Button
        android:id="@+id/buttonSelectEndpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="Continue"
        android:textSize="16sp"
        android:theme="@style/Theme.AppCompat.Dialog.Alert" />

</LinearLayout>

